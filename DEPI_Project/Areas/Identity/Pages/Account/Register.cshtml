        </section>
        </div> *@
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.getElementById('userType').addEventListener('change', function (e) {
                const isBusinessOwner = e.target.value === 'Business Owner';
                document.querySelectorAll('.business-fields').forEach(field => {
                    field.style.display = isBusinessOwner ? 'block' : 'none';
                });
            });
        </script>
    }
</body>