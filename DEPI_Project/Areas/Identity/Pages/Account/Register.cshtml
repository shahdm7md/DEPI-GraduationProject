        label {
            color: white;
            display: block;
            /* font-size: 14px; */
            height: 16px;
            margin-top: 20px;
            margin-bottom: 5px;
        }

        #style {
            height: 16px;
            margin-top: 20px;
            margin-bottom: 5px;
            background-color: transparent;
            border: 0;
            color: white;
            /* font-size: 20px; */
            height: 30px;
            line-height: 30px;
            outline: none !important;
            width: 100%;
        }
        #userType {
            height: 16px;
            margin-top: 20px;
            margin-bottom: 5px;
            background-color: transparent;
            border: 0;
            color: white;
            /* font-size: 20px; */
            height: 30px;
            line-height: 30px;
            outline: none !important;
            width: 100%;
        }

        input::-moz-focus-inner {
            border: 0;
        }

        .linke:hover {
            color: gray;
        }

        #login-submit:hover {
            color: gray;
        }

        #login-submit {
            font-size: 30px;
            background-color: transparent;
            border: 0;
            color: white;
            text-align: left;
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: 140px;
            transition: color 300ms;
        }

            #login-submit:focus {
                color: gray;
            }

            #login-submit:active {
                color: gray;
            }

    </style>
</head>
<body>
<div class="login" style="">
                @ViewData["Title"]
            </div>

<div class="row">
    <div class="col-md-5 col-md-offset-4" style="">
        <section class="form">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                        <h2 style="color:white;">Create a new account.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                              <label asp-for="Input.Email">Email</label>

                        <input id="style" asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                       
                        <div class="form-floating mb-3">
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                        <input id="style" asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenuber" aria-required="true" placeholder="Phone Number" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    @* <div class="form-floating mb-3">
                    <label asp-for="Input.UserName">Your Name</label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="UserName" aria-required="true" placeholder="Your Name" />

                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div> *@
                    <div class="form-floating mb-3">
                        <label asp-for="Input.ProfilePicture">Your Profile Picture</label>
                        <input id="style" asp-for="Input.ProfilePicture" class="form-control" autocomplete="ProfilePicture" aria-required="true" placeholder="ProfilePicture" type="file" name="ProfilePicture" />

                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Password">Password</label>
                        <input id="style" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />

                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input id="style" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />

                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <div class="form-group">
                            <label asp-for="Input.UserType"></label>
                            <select style="background-color:#920b21;" asp-for="Input.UserType" class="form-control" id="userType">
                                <option value="Regular">Regular User</option>
                                <option value="Business Owner">Business Owner</option>
                            </select>
                        </div>

                        <div class="form-group business-fields" style="display: none;">
                            <label asp-for="Input.BusinessName"></label>
                            <input id="style" asp-for="Input.BusinessName" class="form-control" />
                        </div>

                        <div class="form-group business-fields" style="display: none;">
                            <label asp-for="Input.BusinessDescription"></label>
                            <textarea id="style" asp-for="Input.BusinessDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </section>
        </div>
