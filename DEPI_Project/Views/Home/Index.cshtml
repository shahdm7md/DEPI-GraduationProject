			function toggleWishlist(button, productId) {
			const icon = button.querySelector('i');
			const isAdded = icon.classList.contains('fa-heart'); // تحقق مما إذا كان المنتج مضافًا بالفعل

			if (!isAdded) {
			// تغيير الأيقونة إلى القلب الأحمر
			icon.classList.remove('fa-heart-o');
			icon.classList.add('fa-heart');

			// إرسال طلب Ajax لإضافة المنتج إلى القائمة المفضلة
			fetch('/Wishlist/AddWishes', {
			method: 'POST',
			headers: {
			'Content-Type': 'application/json',
			'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value,
			},
			body: JSON.stringify({ productId: productId })
			})
			.then(response => response.json())
			.then(data => {
			if (!data.success) {
			alert('Product already in wishlist.');
			}
			})
			.catch(error => console.error('Error:', error));
			} else {
			// إزالة المنتج من القائمة المفضلة
			icon.classList.remove('fa-heart');
			icon.classList.add('fa-heart-o');

			fetch('/Wishlist/RemoveItem', {
			method: 'POST',
			headers: {
			'Content-Type': 'application/json',
			'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value,
			},
			body: JSON.stringify({ productId: productId })
			})
			.catch(error => console.error('Error:', error));
			}
			}


